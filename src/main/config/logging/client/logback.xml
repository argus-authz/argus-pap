<?xml version="1.0" encoding="UTF-8"?>

<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender"> 
    <File>/tmp/pap-admin_u${effectiveUserId}.log</File>
    <Append>true</Append> 
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
    </layout>
  </appender>
  
  <logger name="org.apache.axis" level="ERROR"/>
  <logger name="org.glite.authz.pap" level="INFO"/>
  <logger name="org.apache.catalina" level="WARN"/>
  <logger name="org.apache" level="WARN"/>
  <logger name="org.springframework" level="WARN"/>
  <logger name="org.opensaml" level="WARN"/>
  <logger name="org.glite.security.trustmanager" level="ERROR"/>
  <logger name="org.glite.security.util" level="ERROR"/>
  <logger name="com.opensymphony" level="WARN"/>
  <logger name="org.glite.security.util" level="ERROR"/>
  <root level="INFO">
    <appender-ref ref="FILE"/>
  </root>
</configuration>
