	<groupId>org.glite.authz.pap</groupId>
	<artifactId>org.glite.authz.pap</artifactId>

	<packaging>war</packaging>
	<name>Argus Policy Administration Point (PAP)</name>
	<version>1.5.1</version>
	<properties>
		<pap-services-namespace>http://org.glite.authz/wsdl/pap/services
        </pap-services-namespace>
		<project.build.sourceEncoding>UTF-8    </project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8     </project.reporting.outputEncoding>
	</properties>

	<build>

		<finalName>pap</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/wsdl</directory>
									<includes>
										<include>access_control-xacml-2.0-policy-schema-os.xsd
										</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<archive>
						<index>true</index>
						<manifestEntries>
							<Main-Class>org.glite.authz.pap.common.Version</Main-Class>
						</manifestEntries>
						<manifestSections>
							<manifestSection>
								<name>org/glite/authz/pap/common/</name>
								<manifestEntries>
									<Implementation-Title>${project.artifactId}</Implementation-Title>
									<Implementation-Version>${project.version}</Implementation-Version>
									<Implementation-Vendor>EMI Collaboration</Implementation-Vendor>
								</manifestEntries>
							</manifestSection>
						</manifestSections>
					</archive>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<executions>
					<execution>
						<id>PAP war creation</id>
						<goals>
							<goal>war</goal>
						</goals>
						<configuration>
							<packagingExcludes>WEB-INF/lib/*.jar, **/*.class</packagingExcludes>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>axistools-maven-plugin
				</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
						<configuration>
							<sourceDirectory>src/main/wsdl
                            </sourceDirectory>
							<typeMappingVersion>1.2</typeMappingVersion>

							<!-- ********** Excluded namespaces ********* -->
							<nsExcludes>
								<nsExclude>urn:oasis:names:tc:xacml:2.0:policy:schema:os
								</nsExclude>
								<nsExclude>urn:oasis:names:tc:SAML:2.0:protocol
                                </nsExclude>
								<nsExclude>
									urn:oasis:names:tc:xacml:2.0:profile:saml2.0:v2:schema:protocol
								</nsExclude>
								<nsExclude>
									http://org.glite.authz/wsdl/pap/services/pap_management/pap
								</nsExclude>
							</nsExcludes>

							<!-- *********** Mappings ********** -->
							<mappings>
								<mapping>
									<namespace>${pap-services-namespace}/authz_management
									</namespace>
									<targetPackage>
										org.glite.authz.pap.services.authz_management.axis_skeletons
									</targetPackage>
								</mapping>
								<mapping>
									<namespace>
										${pap-services-namespace}/highlevel_policy_management
									</namespace>
									<targetPackage>
										org.glite.authz.pap.services.highlevel_policy_management.axis_skeletons
									</targetPackage>
								</mapping>
								<mapping>
									<namespace>
										${pap-services-namespace}/xacml_policy_management
                                    </namespace>
									<targetPackage>
										org.glite.authz.pap.services.xacml_policy_management.axis_skeletons
									</targetPackage>
								</mapping>
								<mapping>
									<namespace>${pap-services-namespace}/pap_management
                                    </namespace>
									<targetPackage>
										org.glite.authz.pap.services.pap_management.axis_skeletons
									</targetPackage>
								</mapping>
								<mapping>
									<namespace>${pap-services-namespace}/provisioning
                                    </namespace>
									<targetPackage>
										org.glite.authz.pap.services.provisioning.axis_skeletons
									</targetPackage>
								</mapping>
								<mapping>
									<namespace>
										http://org.glite.authz/wsdl/pap/services/pap_management/pap
									</namespace>
									<targetPackage>org.glite.authz.pap.common
                                    </targetPackage>
								</mapping>
								<mapping>
									<namespace>urn:oasis:names:tc:xacml:2.0:policy:schema:os
									</namespace>
									<targetPackage>org.opensaml.xacml.policy
                                    </targetPackage>
								</mapping>
								<mapping>
									<namespace>urn:oasis:names:tc:SAML:2.0:protocol
                                    </namespace>
									<targetPackage>org.opensaml.saml2.core
                                    </targetPackage>
								</mapping>
								<mapping>
									<namespace>
										urn:oasis:names:tc:xacml:2.0:profile:saml2.0:v2:schema:protocol
									</namespace>
									<targetPackage>org.opensaml.xacml.profile.saml
                                    </targetPackage>
								</mapping>
							</mappings>
							<!-- ************ General options ********* -->
							<serverSide>true</serverSide>
							<skeletonDeploy>true</skeletonDeploy>
							<helperGen>true</helperGen>
							<useEmitter>true</useEmitter>
							<wrapArrays>false</wrapArrays>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/pap-service.xml
                        </descriptor>
					</descriptors>
				</configuration>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<configuration>
					<header>doc/license.txt</header>

					<excludes>
						<exclude>doc/**</exclude>
						<exclude>**/*.jj</exclude>
						<exclude>**/*.wsdl</exclude>
						<exclude>**/*.wsdd</exclude>
						<exclude>**/*.ini</exclude>
					</excludes>

					<useDefaultExcludes>true</useDefaultExcludes>
					<strictCheck>true</strictCheck>
				</configuration>
				<executions>
					<execution>
						<id>check-headers</id>
						<phase>verify</phase>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
