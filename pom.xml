	<profiles>
		<profile>
			<id>gLite</id>
			<build>
				<finalName>pap</finalName>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2</version>
						<executions>
							<execution>
								<id>cleanup-symlinks</id>
								<phase>pre-clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>/bin/rm</executable>
									<workingDirectory>${project.build.directory}</workingDirectory>
									<arguments>
										<argument>-rf</argument>
										<argument>pap-service</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>EMI</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<finalName>pap</finalName>
				<plugins>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<filters>
								<filter>src/main/assembly/pap-service-emi.properties</filter>
							</filters>
							<descriptors>
								<descriptor>src/main/assembly/pap-service-emi.xml</descriptor>
                                <!--
								<descriptor>src/main/assembly/argus-pap.xml</descriptor>
                                -->
								<descriptor>src/main/assembly/sources.xml</descriptor>
							</descriptors>
							<finalName>argus-pap</finalName>
						</configuration>
					</plugin>

					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>create-symlinks</id>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>/bin/sh</executable>
									<workingDirectory>${project.build.directory}/argus-pap-service</workingDirectory>
									<arguments>
										<argument>${basedir}/src/main/bash/emi-symlinks.sh</argument>
									</arguments>
								</configuration>
							</execution>
                            <execution>
								<id>create-tarball</id>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>/bin/sh</executable>
									<workingDirectory>${project.build.directory}/argus-pap-service</workingDirectory>
									<arguments>
										<argument>${basedir}/src/main/bash/create-tarball.sh</argument>
                                        <argument>${version}</argument>
									</arguments>
								</configuration>
							</execution>

							<execution>
								<id>cleanup-symlinks</id>
								<phase>pre-clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>/bin/rm</executable>
									<workingDirectory>${project.build.directory}</workingDirectory>
									<arguments>
										<argument>-rf</argument>
										<argument>argus-pap-service</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

